---
import BaseLayout from "../layouts/BaseLayout.astro";
import Nav from "../components/Nav.astro";
import Footer from "../components/Footer.astro";
---
<BaseLayout title="Kontakt – Elektriker Berlin: Angebot, Termin, Notdienst 24/7" description="Jetzt anrufen oder schreiben: Angebote, kurzfristige Termine, Notdienst bei Stromausfall, FI‑Problem, Kurzschluss. Schnelle Rückmeldung garantiert.">
	<Nav />
	<main class="container">
		<section class="hero">
			<h1>Kontakt</h1>
			<p>Rufen Sie uns an oder schreiben Sie eine Nachricht – wir melden uns kurzfristig.</p>
			<div class="grid">
				<div class="card">
					<h3>Telefon</h3>
					<p><a href="tel:+493012345678">+49 30 123 45 678</a></p>
				</div>
				<div class="card">
					<h3>E-Mail</h3>
					<p><a href="mailto:hallo@berlin-elektriker.de">hallo@berlin-elektriker.de</a></p>
				</div>
				<div class="card">
					<h3>Anschrift</h3>
					<p>Beispielstraße 12, 10115 Berlin</p>
				</div>
				<div class="card">
					<h3>Kontaktformular</h3>
					<form method="post" action="https://formspree.io/f/xblddamo">
						<input type="text" name="_gotcha" style="display:none" tabindex="-1" autocomplete="off" />
						<input type="hidden" name="_subject" value="Neue Anfrage über berlin-elektriker.de" />
						<div style="display:flex;flex-direction:column;gap:8px">
							<label>
								<span>Name</span>
								<input name="name" required placeholder="Ihr Name" />
							</label>
							<label>
								<span>E‑Mail</span>
								<input type="email" name="email" required placeholder="beispiel@domain.de" />
							</label>
							<label>
								<span>Nachricht</span>
								<textarea name="message" rows="4" required placeholder="Kurz Ihr Anliegen…"></textarea>
							</label>
							<button class="cta" type="submit">Senden</button>
						</div>
					</form>
				</div>
			</div>
		</section>
	</main>
	<Footer />
</BaseLayout>





